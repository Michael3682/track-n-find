
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

enum ItemStatus {
  UNCLAIMED
  CLAIMED
}

enum ItemType {
  FOUND
  LOST
}

model User {
  id                String @id
  name              String
  email             String? @unique
  password          String
  role              Role @default(USER)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  items             Item[] @relation("Item_author")
  messages          Message[]
  conversationHost  Conversation[] @relation("Conversation_Host")
  conversationSender Conversation[] @relation("Conversation_Sender")
  activeSockets     ActiveSocket[]
  claims            Claim[] @relation("Claimer")
  returns            Return[] @relation("Returner")
  claimed_reports    Claim[] @relation("Claim_Reporter")
  returned_reports   Return[] @relation("Return_Reporter")
}

model Item {
  id                String @id @default(uuid())
  name              String
  description       String
  category          String? 
  date_time         DateTime @default(now())
  location          String
  attachments       Json?
  status            ItemStatus @default(UNCLAIMED)
  type              ItemType
  associated_person String
  author            User @relation("Item_author", fields: [associated_person], references: [id])
  conversations     Conversation[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  claims            Claim[]
  returns           Return[]
}

model Message {
  id              String @id @default(uuid())
  content         String
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id])
  authorId        String
  author          User @relation(fields: [authorId], references: [id])
  createdAt       DateTime @default(now())
}

model Conversation {
  id              String @id @default(uuid())
  itemId          String
  hostId          String
  senderId        String
  item            Item @relation(fields: [itemId], references: [id])
  host            User @relation("Conversation_Host", fields: [hostId], references: [id])
  sender          User @relation("Conversation_Sender", fields: [senderId], references: [id])
  lastMessage     String?
  lastMessageAt   DateTime @default(now())
  messages        Message[]
  createdAt       DateTime @default(now())
  claims          Claim[]
  returns         Return[]

  @@unique([itemId, hostId, senderId])
}

model ActiveSocket {
  id        String   @id @default(uuid())
  socketId  String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  // For detecting stale or disconnected connections
  createdAt DateTime @default(now())
  lastSeen  DateTime @default(now())
}

model Claim {
  id              String @id @default(uuid())
  itemId          String
  claimerId       String
  claimerName     String
  claimedAt       DateTime @default(now())
  reporterId      String
  conversationId  String

  // Credentials
  yearAndSection  String?
  studentId       String?
  contactNumber   String?
  proofOfClaim    String

  item            Item @relation(fields: [itemId], references: [id])
  claimer         User @relation("Claimer", fields: [claimerId], references: [id])
  reporter        User @relation("Claim_Reporter", fields: [reporterId], references: [id])
  conversation    Conversation @relation(fields: [conversationId], references: [id])
}

model Return {
  id              String @id @default(uuid())
  itemId          String
  returnerId       String
  returnerName     String
  returnedAt       DateTime @default(now())
  reporterId      String
  conversationId  String

  // Credentials
  yearAndSection  String?
  studentId       String?
  contactNumber   String?
  proofOfClaim    String

  item            Item @relation(fields: [itemId], references: [id])
  returner         User @relation("Returner", fields: [returnerId], references: [id])
  reporter        User @relation("Return_Reporter", fields: [reporterId], references: [id])
  conversation    Conversation @relation(fields: [conversationId], references: [id])
}